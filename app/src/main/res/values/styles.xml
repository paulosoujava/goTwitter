<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <style name="MyThemeSplash" parent="AppTheme">
        <item name="colorPrimaryDark">@color/blue_light</item>
    </style>


    <style name="MyThemeSplash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyThemeSplash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
